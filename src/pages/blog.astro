---
import Layout from '../layouts/Layout.astro';

const posts: any[] = [];  // Empty array until ready to publish
---

<Layout title="blog">
  <h1 class="text-4xl font-bold mb-8">blog.</h1>
  {posts.length > 0 ? (
    <ul class="space-y-4">
      {posts.map(post => (
        <li>
          <span class="text-sage-500 mr-4">{post.date}</span>
          <a href={`/blog/${post.slug}`} class="hover:text-sage-500">
            {post.title}
          </a>
        </li>
      ))}
    </ul>
  ) : (
    <p class="text-lg text-gray-400">Posts coming soon...</p>
  )}
</Layout>